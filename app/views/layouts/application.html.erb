<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Items: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'style' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>

<div id="content">

	<div id="header">
	
			<div id="login_logout">
			<% if logged_in? %>
				Logged in as: <b><%= current_user.login %> </b> | <%= link_to 'Logout', logout_path %>
			<% else %>
				No user currently logged in
			<% end %>
		</div>
		
		<div id="logo">
			<span id="box_back"></span>
			<span id="box_front">
				<span>30days.</span>
			</span>
		</div>
		
	
	</div>
	
	
		<div id="bookmarklet">Get the bookmarklet <%=image_tag 'arrow.png', :size => '30x10' %>
	  	<a href="javascript:var d=document,w=window,e=w.getSelection,k=d.getSelection,x=d.selection,s=(e?e():(k)?k():(x?x.createRange().text:0)),f='http://<%= request.host_with_port %>/items/new',l=d.location,e=encodeURIComponent,p='?v=1&u='+e(l.href)%20+'&t='+e(d.title.replace(/^\s*|\s*$/g,''))%20+'&s='+e(s),u=f+p;try{if(!/^(.*\.)?instapaper([^.]*)?$/.test(l.host))throw(0);
iptstbt();}catch(z){a =function(){if(!w.open(u,'t','toolbar=0,resizable=no,status=0,scrollbars=no,
width=400,height=250'))l.href=u;};if(/Firefox/.test(navigator.userAgent))setTimeout(a,0);
else a();w.close();}void(0)">
    Save for later
  	</a>
	
	</div>
	
	<div id="message_board">
	<% if logged_in? %>
		Your list contains <span id="total_items"><%=pluralize(total_items,"item")%></span>
		(of which, <span id="old_items"><%=pluralize(old_items,"item")%></span> more than 30 days old)
		
	<% else %>
		Please log in.
	<% end %>
	</div>
	

	<div id="output">
		<%= yield %>
	</div>

</div>

</body>
</html>
